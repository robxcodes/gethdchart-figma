{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./node_modules/@figma/plugin-typings"
    ],
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
